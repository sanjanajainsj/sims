<h1>Listing Seeds</h1>


<% form_tag seeds_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<table border="1">
  <thead>
    <tr>
      <th>Gid</th>
      <th>Location</th>
      <th>Room</th>
      <th>Row</th>
      <th>Shelf</th>
      <th>Box</th>
      <th>Stock</th>
      <th>Source</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @seeds.each do |seed| %>
      <tr>
        <td><%= seed.gid %></td>
        <td><%= seed.location %></td>
        <td><%= seed.room %></td>
        <td><%= seed.row %></td>
        <td><%= seed.shelf %></td>
        <td><%= seed.box %></td>
        <td><%= seed.stock_id %></td>
        <td><%= seed.source %></td>
        <td><%= link_to 'View', seed %></td>
        <td><%= link_to 'Edit', edit_seed_path(seed) %></td>
        <td><%= link_to 'Remove', seed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

  </tbody>
</table>

<br>

